            <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                <use xlink:href="#bootstrap"></use>
            </svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-right mb-md-0">
            <li><a href="index.ejs" class="nav-link px-2 text-secondary">HOME</a></li>
            <li><a href="#products" class="nav-link px-2 text-dark">STORE</a></li>
            <li><a href="#" class="nav-link px-2 text-dark">DROPDOWN</a></li>
